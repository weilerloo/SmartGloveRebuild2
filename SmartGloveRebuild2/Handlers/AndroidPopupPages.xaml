<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Color="Transparent"
             x:Class="SmartGloveOvertime.Handlers.AndroidPopupPages">
    <Border>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="40" />
        </Border.StrokeShape>
        <Grid BackgroundColor="White" HeightRequest="250" WidthRequest="250" RowDefinitions="150,50,20">
            <ActivityIndicator Grid.Row="0" Color="#013292" HeightRequest="50" WidthRequest="50" Margin="0,40,0,20" IsRunning="True" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Grid.Row="1" Text="Loading..." FontSize="Large" Margin="5,5,5,0" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Grid.Row="2" Text="Please be patient." FontSize="Caption" VerticalOptions="Start" HorizontalOptions="Center"/>
        </Grid>
    </Border>
</toolkit:Popup>