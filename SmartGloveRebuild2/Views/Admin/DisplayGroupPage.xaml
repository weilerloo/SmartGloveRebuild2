<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGloveRebuild2.Views.Admin.DisplayGroupPage"
             xmlns:models="clr-namespace:SmartGloveRebuild2.Models.Group"
             xmlns:viewModels="clr-namespace:SmartGloveRebuild2.ViewModels.Admin"
             x:DataType="viewModels:DisplayGroupViewModel"
             Title="Display Groups Page">
    <ScrollView>
        <VerticalStackLayout>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,0,0,30">
                <Label FontAttributes="Bold" Text="Display Groups" FontSize="22" Margin="20,20,0,10" TextColor="Black"/>
                <Label Grid.Row="1" Text="Please SELECT a group." FontSize="22" Margin="20,0,0,10" TextColor="Black"/>
                <StackLayout Grid.Row="2" Margin="10" HorizontalOptions="Center">
                    <Picker FontSize="20" TextColor="Black" WidthRequest="200" Title="GroupList" 
                            ItemsSource="{Binding GroupTitleList}" 
                            SelectedItem="{Binding SelectedGroupname}"
                            SelectedIndex="{Binding Selectedindex}"
                            ItemDisplayBinding="{Binding GroupName}" />
                    <ActivityIndicator IsRunning="True" IsVisible="{Binding IsRefreshing}" HeightRequest="25" WidthRequest="25"/>
                </StackLayout>
                <Label Grid.Row="3" Text="Total of Worker:" FontSize="16" Margin="0,0,30,10" HorizontalOptions="Center" TextColor="Black"/>
            </Grid>
            <Frame CornerRadius="0">
                <Grid ColumnDefinitions="*,*">
                    <Label HorizontalOptions="Center" Grid.Column="0" Text="Members" FontSize="17"/>
                    <Label HorizontalOptions="Center" Grid.Column="1" Text="OT Hours" FontSize="17"/>
                </Grid>
            </Frame>
            <RefreshView IsRefreshing="{Binding IsRefreshing}">
                <CollectionView ItemsSource="{Binding GroupNameList}">
                    <CollectionView.EmptyView>
                        <Label Text="No Groups Found"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="FillAndExpand"
                           VerticalTextAlignment="Center" />
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:GroupList">
                            <Grid ColumnDefinitions="*,*">
                                <Grid RowDefinitions="Auto,Auto">
                                    <Label Margin="10,0,0,0" HorizontalOptions="Start" Grid.Row="0" Text="{Binding EmployeeName}" TextColor="Black" FontSize="19"/>
                                    <Label Margin="10,0,0,0" HorizontalOptions="Start" Grid.Row="1" Text="{Binding UserName}" TextColor="Blue" FontSize="16"/>
                                </Grid>
                                <Label Grid.Column="1" HorizontalOptions="Center" HorizontalTextAlignment="End" Text="{Binding TotalHour}" TextColor="Black" FontSize="21"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <Button Margin="10,20,10,20" WidthRequest="200" HeightRequest="50" Text="Edit Group" Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewModels:DisplayGroupViewModel}},Path=EditGroupCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
