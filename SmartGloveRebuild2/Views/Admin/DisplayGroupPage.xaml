<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGloveRebuild2.Views.Admin.DisplayGroupPage"
             xmlns:models="clr-namespace:SmartGloveRebuild2.Models.Group"
             xmlns:viewModels="clr-namespace:SmartGloveRebuild2.ViewModels.Admin"
             x:DataType="viewModels:DisplayGroupViewModel"
             Title="Display Group Page">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,0,0,30">
                    <Label FontAttributes="Bold" Text="Display Groups" FontSize="22" Margin="20,20,0,10" TextColor="Black"/>
                    <Label Grid.Row="1" Text="Please SELECT a group." FontSize="22" Margin="20,0,0,10" TextColor="Black"/>
                    <StackLayout Grid.Row="2" Margin="10" HorizontalOptions="Center">
                        <Picker FontSize="20" HorizontalTextAlignment="Center" TextColor="Black" WidthRequest="200" Title="Click me to Choose" 
                            ItemsSource="{Binding GroupTitleList}" 
                            SelectedItem="{Binding SelectedGroupname}"
                            ItemDisplayBinding="{Binding GroupName}"/>
                        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" HeightRequest="25" WidthRequest="25"/>
                    </StackLayout>
                    <Grid Grid.Row="3" ColumnDefinitions="Auto,Auto" HorizontalOptions="Center">
                        <Label Grid.Column="0" Text="Total of Worker:" FontSize="16" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Grid.Column="1" Text="{Binding TotalWorker}" FontSize="16" Margin="5,0,0,10" HorizontalOptions="Center" TextColor="Black"/>
                    </Grid>
                </Grid>
                <Frame CornerRadius="0">
                    <Grid ColumnDefinitions="*,*">
                        <Label HorizontalOptions="Center" Margin="0,0,60,0" Grid.Column="0" Text="Members" FontSize="17"/>
                        <Label HorizontalOptions="Center" Margin="70,0,0,0" Grid.Column="1" Text="OT Hours" FontSize="17"/>
                    </Grid>
                </Frame>
                <CollectionView ItemsSource="{Binding GroupNameList}">
                    <CollectionView.EmptyView>
                        <Grid WidthRequest="300" HeightRequest="150">
                            <Label Text="No Logs Found"
                                   Margin="5"
                                   HorizontalOptions="FillAndExpand"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="FillAndExpand"
                                   VerticalTextAlignment="Center" />
                        </Grid>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:GroupList">
                            <Grid ColumnDefinitions="*,*">
                                <Grid RowDefinitions="Auto,Auto">
                                    <Label Margin="20,0,0,0" HorizontalOptions="Start" Grid.Row="0" Text="{Binding EmployeeName}" TextColor="Black" FontSize="19"/>
                                    <Label Margin="20,0,0,0" HorizontalOptions="Start" Grid.Row="1" Text="{Binding UserName}" TextColor="Blue" FontSize="16"/>
                                </Grid>
                                <Label Margin="50,0,0,0" Grid.Column="1" HorizontalOptions="Center" HorizontalTextAlignment="End" Text="{Binding TotalHour}" TextColor="Black" FontSize="21"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <Button x:Name="EditButton" Grid.Row="1" Margin="0,0,0,30" WidthRequest="200" HeightRequest="50" Text="Edit Group" 
                Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewModels:DisplayGroupViewModel}},Path=EditGroupCommand}"/>
    </Grid>
</ContentPage>
