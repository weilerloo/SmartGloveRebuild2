<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGloveRebuild2.Views.Admin.AssignGroupPage"
             xmlns:model="clr-namespace:SmartGloveRebuild2.Models.Group"
             xmlns:viewmodel="clr-namespace:SmartGloveRebuild2.ViewModels.Admin"
             x:DataType="viewmodel:AssignGroupViewModel"
             Title="Assign Group Page">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto,Auto" Margin="0,0,0,30">
                    <Label FontAttributes="Bold" Text="Assign Groups" FontSize="22" Margin="20,20,0,10" TextColor="Black"/>
                    <Label Grid.Row="1" Text="Please CHOOSE from the lists." FontSize="22" Margin="20,0,0,10" TextColor="Black"/>
                </Grid>
                <Frame CornerRadius="0">
                    <Grid ColumnDefinitions="*,*">
                        <Label HorizontalOptions="Center" Grid.Column="0" Text="Members" FontSize="17"/>
                        <Label HorizontalOptions="Center" Grid.Column="1" Text="Group Changes?" FontSize="17"/>
                    </Grid>
                </Frame>
                <RefreshView IsRefreshing="{Binding IsRefreshing}">
                    <CollectionView ItemsSource="{Binding EditGroupList}">
                        <CollectionView.EmptyView>
                            <Label Text="No Groups Found"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="FillAndExpand"
                           VerticalTextAlignment="Center" />
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:GroupList">
                                <Grid ColumnDefinitions="*,*">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto, Auto">
                                        <Label Margin="10,0,0,0" HorizontalOptions="Start" Grid.Row="0" Text="{Binding EmployeeName}" TextColor="Black" FontSize="19"/>
                                        <Label Margin="10,0,0,0" HorizontalOptions="Start" Grid.Row="1" Text="{Binding UserName}" TextColor="Blue" FontSize="16"/>
                                        <Label Margin="10,0,0,0" HorizontalOptions="Start" Grid.Column="1" Text="{Binding GroupName}" TextColor="Blue" FontSize="16"/>
                                    </Grid>
                                    <StackLayout Grid.Row="2" Margin="10" HorizontalOptions="Center">
                                        <Picker FontSize="20" TextColor="Black" WidthRequest="200" ItemsSource="{Binding TitleGroup}"
                                                ItemDisplayBinding="{Binding GroupName}" 
                                                SelectedItem="{Binding SelectedGroup}"
                                                SelectedIndex="{Binding SelectedIndex}"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </VerticalStackLayout>
            <Grid ColumnDefinitions="*,*" Grid.Row="1">
                <Button Grid.Column="0" Command="{Binding SaveGroupChangesCommand}" Text="Save Changes"/>
                <Button Grid.Column="1" Command="{Binding DeleteGroupsCommand}" Text="Delete Groups"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
